{
  "name": "semantic-release-monorepo",
  "version": "0.0.0-development",
  "description": "Plugins for `semantic-release` allowing it to be used with a monorepo.",
  "main": "src/index.js",
  "files": [
    "src"
  ],
  "scripts": {
    "format": "prettier --write --single-quote --trailing-comma es5",
    "format:all": "yarn format \"./**/*.js\"",
    "test": "jest --coverage"
  },
  "license": "MIT",
  "peerDependencies": {
    "semantic-release": ">=15.11.x"
  },
  "dependencies": {
    "@semantic-release/error": "^2.2.0",
    "debug": "^3.2.7",
    "execa": "^0.8.0",
    "fs-extra": "^10.0.0",
    "glob-promise": "^4.2.0",
    "p-limit": "^1.3.0",
    "pkg-up": "^2.0.0",
    "ramda": "^0.25.0",
    "read-pkg": "^5.2.0",
    "semantic-release-plugin-decorators": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "husky": "^4.3.8",
    "jest": "^25.5.4",
    "jest-extended": "^0.11.5",
    "lint-staged": "^10.5.4",
    "prettier": "^1.19.1",
    "semantic-release": "^17.4.4",
    "semantic-release-github-pr": "^6.0.1",
    "tempy": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn format"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended",
      "./jest.setup-git-windows.js"
    ]
  }
}
